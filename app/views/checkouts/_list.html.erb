<table class="index">
  <tr>
    <th>
      <%= t('activerecord.models.user') %>
      <%= link_to image_tag('icons/arrow_up.png', :size => '16x16', :alt => t('page.asc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'users.username', :order => 'asc')) -%>
      <%= link_to image_tag('icons/arrow_down.png', :size => '16x16', :alt => t('page.desc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'users.username', :order => 'desc')) -%>
    </th>
    <th class="checked_item_title">
      <%= t('page.title') %>
      <%= link_to image_tag('icons/arrow_up.png', :size => '16x16', :alt => t('page.asc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'items.item_identifier', :order => 'asc')) -%>
      <%= link_to image_tag('icons/arrow_down.png', :size => '16x16', :alt => t('page.desc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'items.item_identifier', :order => 'desc')) -%>
    </th>
    <th>
      <%= t('activerecord.attributes.checkout.due_date') %>
      <%= link_to image_tag('icons/arrow_up.png', :size => '16x16', :alt => t('page.asc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'checkouts.due_date', :order => 'asc')) -%>
      <%= link_to image_tag('icons/arrow_down.png', :size => '16x16', :alt => t('page.desc'), :title => t('tooltip.asc')), url_for(params.merge(:sort_by => 'checkouts.due_date', :order => 'desc')) -%>
    </th>
    <th><%= t('activerecord.attributes.checkout.renewal_count') %></th>
    <th></th>
  </tr>

<%- if @checkouts -%>
  <%- @checkouts.each_with_index do |checkout, i| %>
  <tr class="line<%= cycle("0", "1") -%>">
    <td>
      <%= link_to checkout.user_username, checkout.user %>
      <br />
      (<%= link_to checkout.user_user_number, checkout.user %>)
    </td>
    <td>
      <%= render 'manifestations/show_index', :manifestation => checkout.item.manifestation -%>
      <%= t('activerecord.attributes.item.call_number') -%>: <%= link_to call_numberformat(checkout.item), item_path(checkout.item) -%> /
      <%= t('activerecord.attributes.item.item_identifier') -%>: <%= link_to checkout.item.item_identifier, item_path(checkout.item) -%>
    </td>
    <td><%= l(checkout.due_date, :format => :only_date) -%></td>
    <td><%= checkout.checkout_renewal_count -%></td>
    <td>
      <nobr><%= link_to t('page.show'), user_checkout_path(checkout.user, checkout) -%></nobr>
      <br />
      <%- if (can? :update, checkout) && (current_user.has_role?('Librarian') || checkout.checkout_renewable?(current_user)) -%> 
        <%- if current_user.has_role?('Librarian') -%>
          <%= link_to t('checkout.extend'), edit_user_checkout_path(checkout.user, checkout) -%>
        <%- else -%>
          <%= link_to t('checkout.extend'), user_checkout_path(checkout.user, checkout), :method => :put -%>
        <%- end -%>
      <%- end -%>
    </td>
    <!--
    <td>
      <%- if can? :destroy, checkout -%>
        <%= link_to t('page.destroy'), user_checkout_path(checkout.user, checkout), :confirm => t('page.are_you_sure'), :method => :delete -%>
      <%- end -%>
    </td>
    -->
  </tr>
  <%- end -%>
<%- end -%>
</table>
