<h1 class="title"><%= t('page.new', :model => t('activerecord.models.checked_item')) -%></h1>

<%= form_for(@checked_item, :url => user_basket_checked_items_path(@basket.user, @basket)) do |f| -%>
  <%= f.error_messages -%>
  <div class="field">
    <%= f.label t('activerecord.models.item') -%><br />
    <%= f.text_field :item_id -%>
  </div>

  <div class="field">
    <%= f.label t('activerecord.models.basket') -%><br />
    <%= f.text_field :basket_id -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<%- end -%>

<%= link_to t('page.back'), user_basket_checked_items_path(@basket.user, @basket) -%>
