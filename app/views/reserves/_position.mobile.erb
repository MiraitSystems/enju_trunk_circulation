<%= object.first? ? image_tag('icons/cross.png', :size => '16x16', :title => t('tooltip.unavailable')) : link_to(image_tag('icons/arrow_up.png', :size => '16x16', :alt => t('page.asc'), :title => t('tooltip.asc')), {:action => 'update', :position  => (object.position > 1 ? object.position - 1 : 1), :id => object.id}, :method => :put) -%>
<%= option == 'last' ? image_tag('icons/cross.png', :size => '16x16', :title => t('tooltip.unavailable')) : link_to(image_tag('icons/arrow_down.png', :size => '16x16', :alt => t('page.desc'), :title => t('tooltip.desc')), {:action => 'update', :position => (object.position + 1), :id => object.id}, :method => :put) -%>
